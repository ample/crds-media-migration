#!/usr/bin/env ruby

require 'contentful/management'
require 'irb'
require 'irb/completion'
require 'pry'
require 'fileutils'

require_relative '../lib/migrator'

def reload!
  root_dir = File.expand_path('..', __dir__)

  %w[lib models].each do |dir|
    Dir.glob("#{root_dir}/#{dir}/**/*.rb").each { |f| load(f) }
  end

  true
end

IRB.start
